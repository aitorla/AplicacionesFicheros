<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ficheros 1"
        android:id="@+id/btFicheros1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ficheros 2"
        android:id="@+id/btFicheros2"
        android:layout_below="@+id/btFicheros1"
        android:layout_alignLeft="@+id/btFicheros1"
        android:layout_alignStart="@+id/btFicheros1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ficheros 3"
        android:id="@+id/btFicheros3"
        android:layout_below="@+id/btFicheros2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btSalir"
        android:layout_below="@+id/btFicheros3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
